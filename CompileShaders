~/VulkanSDK/1.1.92.1/x86_64/bin/glslangValidator -V src/shaders/color_position/primary.rmiss -Isrc/shaders/include -o src/shaders/out/color_position/primary_rmiss.spv
~/VulkanSDK/1.1.92.1/x86_64/bin/glslangValidator -V src/shaders/color_position/secondary.rchit -Isrc/shaders/include -o src/shaders/out/color_position/secondary_rchit.spv
~/VulkanSDK/1.1.92.1/x86_64/bin/glslangValidator -V src/shaders/color_position/secondary.rmiss -Isrc/shaders/include -o src/shaders/out/color_position/secondary_rmiss.spv

